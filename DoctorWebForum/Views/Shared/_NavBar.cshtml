@*Navigation Bar partial view*@
<header class="u-clearfix u-header" id="sec-f594">
    <div class="u-clearfix u-sheet u-sheet-1">


        <!-- Logo image -->
        <a href="#" class="u-image u-logo u-image-1">
            <img src="~/Content/images/logo.jpeg" class="u-logo-image u-logo-image-1 main-logo">
        </a>

        <!-- Navigation bar -->
        <nav class="u-menu u-menu-one-level u-offcanvas u-menu-1 nav-container" id="navBar">
            <div class="menu-collapse" style="font-size: 1rem; letter-spacing: 0px;">
                <a class="u-button-style u-custom-left-right-menu-spacing u-custom-padding-bottom u-custom-top-bottom-menu-spacing u-nav-link u-text-active-palette-1-base u-text-hover-palette-2-base"
                   href="#" onclick="toggleNavClassName">

                    <!-- Mobile View icon -->
                    <i class="fa fa-bars"></i>

                </a>
            </div>

            <!-- Navigation pages for big screen -->
            <div class="u-custom-menu u-nav-container">
                <ul class="u-nav u-unstyled u-nav-1">

                    <li class="u-nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "u-button-style u-nav-link u-text-active-palette-1-base u-text-hover-palette-2-base", style = "padding: 10px 20px" })
                    </li>

                    <li class="u-nav-item">
                        <a class="u-button-style u-nav-link u-text-active-palette-1-base u-text-hover-palette-2-base"
                           href="/forum" style="padding: 10px 20px;">Forum</a>
                    </li>

                    <li class="u-nav-item">
                        @Html.ActionLink("Members", "MembersList", "Manage", new { area = "" }, new { @class = "u-button-style u-nav-link u-text-active-palette-1-base u-text-hover-palette-2-base", style = "padding: 10px 20px" })
                    </li>



                    @Html.Partial("_LoginPartialBig")

                </ul>
            </div>

            <!-- Navigation pages for small screens -->
            <div class="u-custom-menu u-nav-container-collapse">
                <div class="u-black u-container-style u-inner-container-layout u-opacity u-opacity-95 u-sidenav">
                    <div class="u-inner-container-layout u-sidenav-overflow">
                        <div class="u-menu-close"></div>
                        <ul class="u-align-center u-nav u-popupmenu-items u-unstyled u-nav-2">

                            <li class="u-nav-item">
                                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "u-button-style u-nav-link", style = "padding: 10px 20px" })
                            </li>

                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" href="/forum">Forum</a>
                            </li>

                            <li class="u-nav-item">
                                @Html.ActionLink("Members", "MembersList", "Manage", new { area = "" }, new { @class = "u-button-style u-nav-link", style = "padding: 10px 20px" })
                            </li>


                            @Html.Partial("_LoginPartialSmall")

                        </ul>
                    </div>
                </div>

                <div class="u-black u-menu-overlay u-opacity u-opacity-70"></div>
            </div>

        </nav>

    </div>
</header>

<script>
    //Renders appropriate view depending on user role when user clicks the login link
    function LoginCategory() {
        swal({
            title: "Login as ___",
            buttons: ["Admin", "User"],
            allowOutsideClick: false
        })
            .then((isUser) => {
                if (isUser) {
                    window.location.assign("/Account/Login");
                } else {
                    window.location.assign("/Account/LoginAdmin");
                }
            });
    }

</script>